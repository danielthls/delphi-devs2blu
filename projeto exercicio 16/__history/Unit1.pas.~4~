unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    edtNome: TEdit;
    Label2: TLabel;
    edtNota1: TEdit;
    Label3: TLabel;
    edtNota2: TEdit;
    Label4: TLabel;
    edtNota3: TEdit;
    btnMedia: TButton;
    mmResultado: TMemo;
  private
    { Private declarations }
    function calculaMedia: double;
    function checaAprocacao(pMedia: double): string;
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

function TForm1.calculaMedia: double;
var
  xNota1, xNota2, xNota3: double;
begin
  xNota1 := strToFloat(edtNota1.text);
  xNota2 := strToFloat(edtNota2.text);
  xNota3 := strToFloat(edtNota3.text);

  result := (xNota1 + xNota2 + xNota3) / 3;
end;

function TForm1.checaAprocacao(pMedia: double): string;

begin
  if pMedia >= 7 then
    result:= 'Aprovado'
  else if pMedia <= 5 then
    result:= 'Reprovado'
  else
    result:= 'Recuperação';

end;

end.
